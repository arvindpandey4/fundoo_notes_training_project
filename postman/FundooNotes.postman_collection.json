        {
            "name": "Notes",
            "item": [
                {
                    "name": "Create Note",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{authToken}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Project Ideas\",\n    \"description\": \"1. Build a Fundoo Notes App\\n2. Learn MVC\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/notes",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "notes"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get All Notes",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{authToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/notes",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "notes"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Single Note",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{authToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/notes/<NOTE_ID>",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "notes",
                                "<NOTE_ID>"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Note",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{authToken}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Updated Project Ideas\",\n    \"description\": \"Added more details.\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
