                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "notes",
                                "<NOTE_ID>"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete Note",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{authToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/notes/<NOTE_ID>",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "notes",
                                "<NOTE_ID>"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
